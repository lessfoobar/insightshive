{
  "name": "insightshive-website",
  "version": "1.0.0",
  "description": "AI-Powered Retail Intelligence Platform Website",
  "main": "index.html",
  "scripts": {
    "dev": "npm run css:build && live-server --port=8080 --open=/index.html",
    "build": "npm run clean && npm run css:build && npm run js:build && npm run copy:assets",
    "css:build": "postcss css/main.css -o css/main.css --config postcss.config.js",
    "css:watch": "postcss css/main.css -o css/main.css --watch --config postcss.config.js",
    "css:dev": "postcss css/main.css -o css/main.css --config postcss.config.js --watch",
    "js:build": "mkdir -p dist/js && cp -r js/* dist/js/",
    "copy:assets": "cp -r images dist/ && cp *.html dist/",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "validate": "html-validate *.html",
    "serve": "live-server --port=3000",
    "clean": "rm -rf dist",
    "deploy:prepare": "npm run build && cp css/main.css dist/css/main.css"
  },
  "keywords": [
    "ai",
    "retail",
    "computer-vision",
    "analytics",
    "insightshive"
  ],
  "author": "InsightsHive Team",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "eslint": "^8.57.0",
    "html-validate": "^8.7.4",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/insightshive/website"
  },
  "homepage": "https://insightshive.com"
}