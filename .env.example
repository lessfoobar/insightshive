# InsightsHive Website Environment Variables
# Copy this file to .env and update with your values

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Development server settings
DEV_PORT=3000
DEV_HOST=localhost
DEV_OPEN_BROWSER=true

# Build environment
NODE_ENV=development

# ================================
# SITE CONFIGURATION
# ================================

# Site metadata
SITE_NAME="InsightsHive"
SITE_DESCRIPTION="AI-Powered Retail Intelligence Platform"
SITE_URL="https://insightshive.com"
SITE_AUTHOR="InsightsHive Team"

# Contact information
CONTACT_EMAIL="info@insightshive.com"
BUSINESS_EMAIL="info@insightshive.com"

# ================================
# ANALYTICS & TRACKING
# ================================

# Google Analytics (Optional)
GA_TRACKING_ID=""

# Plausible Analytics (Privacy-friendly alternative)
PLAUSIBLE_DOMAIN=""

# Microsoft Clarity (Optional)
CLARITY_PROJECT_ID=""

# ================================
# SOCIAL MEDIA & LINKS
# ================================

# LinkedIn profiles
LINKEDIN_NIKOLA="https://www.linkedin.com/in/nikola-k-393b18104/"
LINKEDIN_OGNYAN="https://www.linkedin.com/in/ognyan-v-vasilev/"

# Company social media (if applicable)
LINKEDIN_COMPANY=""
TWITTER_HANDLE=""

# ================================
# API ENDPOINTS (if used)
# ================================

# Contact form endpoint (e.g., Netlify Forms, Formspree)
CONTACT_FORM_ENDPOINT=""

# Newsletter signup endpoint
NEWSLETTER_ENDPOINT=""

# ================================
# PERFORMANCE & MONITORING
# ================================

# Error tracking (e.g., Sentry)
SENTRY_DSN=""

# Performance monitoring
PERFORMANCE_TRACKING=false

# ================================
# SECURITY SETTINGS
# ================================

# Content Security Policy (CSP) settings
CSP_REPORT_URI=""

# Security headers
SECURITY_HEADERS_ENABLED=true

# ================================
# DEPLOYMENT SETTINGS
# ================================

# Build settings
BUILD_OPTIMIZE=true
BUILD_MINIFY=true
BUILD_SOURCE_MAPS=false

# CDN settings (if using)
CDN_URL=""
ASSET_PREFIX=""

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable features
FEATURE_DARK_MODE=true
FEATURE_ANALYTICS=false
FEATURE_CONTACT_FORM=true
FEATURE_NEWSLETTER=false

# ================================
# THIRD-PARTY SERVICES
# ================================

# Email service (if using contact forms)
EMAIL_SERVICE_API_KEY=""

# File upload service (if needed)
UPLOAD_SERVICE_URL=""

# ================================
# DEVELOPMENT TOOLS
# ================================

# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Live reload
LIVE_RELOAD=true

# Browser sync
BROWSER_SYNC=true